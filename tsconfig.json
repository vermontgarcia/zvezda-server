{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules"],
}