{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "src/index.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "compiler": "typescript"
  }
}